{
  "deployment": {
    "version": "2.0",
    "strategy": "parallel",
    "maxConcurrentDeployments": 5,
    "healthCheckTimeout": 30000,
    "rollbackEnabled": true,
    "autoScalingEnabled": true
  },
  "agents": {
    "crewai": {
      "instances": {
        "legal-consultation": {
          "minInstances": 2,
          "maxInstances": 10,
          "targetCPU": 70,
          "priority": 1,
          "rollbackEnabled": true
        },
        "document-analysis": {
          "minInstances": 1,
          "maxInstances": 5,
          "targetCPU": 75,
          "priority": 1,
          "rollbackEnabled": true
        },
        "appointment-scheduling": {
          "minInstances": 1,
          "maxInstances": 3,
          "targetCPU": 60,
          "priority": 2,
          "rollbackEnabled": true
        },
        "enhanced-intake": {
          "minInstances": 2,
          "maxInstances": 8,
          "targetCPU": 65,
          "priority": 1,
          "rollbackEnabled": true,
          "dependencies": ["legal-consultation"]
        },
        "removal-defense": {
          "minInstances": 1,
          "maxInstances": 4,
          "targetCPU": 70,
          "priority": 2,
          "rollbackEnabled": true
        },
        "business-immigration": {
          "minInstances": 1,
          "maxInstances": 4,
          "targetCPU": 70,
          "priority": 2,
          "rollbackEnabled": true
        },
        "criminal-defense": {
          "minInstances": 1,
          "maxInstances": 4,
          "targetCPU": 70,
          "priority": 2,
          "rollbackEnabled": true
        },
        "aila-trained-removal": {
          "minInstances": 1,
          "maxInstances": 3,
          "targetCPU": 75,
          "priority": 3,
          "rollbackEnabled": true,
          "dependencies": ["removal-defense"]
        }
      }
    },
    "retell": {
      "instances": {
        "immigration-voice": {
          "enabled": true,
          "language": "en-US",
          "priority": 2,
          "rollbackEnabled": true
        },
        "personal-injury-voice": {
          "enabled": true,
          "language": "en-US",
          "priority": 3,
          "rollbackEnabled": true
        },
        "criminal-defense-voice": {
          "enabled": true,
          "language": "en-US",
          "priority": 3,
          "rollbackEnabled": true
        },
        "reception-voice": {
          "enabled": true,
          "language": "en-US",
          "priority": 2,
          "rollbackEnabled": true
        },
        "spanish-immigration-voice": {
          "enabled": true,
          "language": "es-US",
          "priority": 2,
          "rollbackEnabled": true
        }
      }
    },
    "chat": {
      "instances": {
        "main-chat": {
          "minInstances": 3,
          "maxInstances": 20,
          "targetCPU": 65,
          "priority": 1,
          "rollbackEnabled": true
        }
      }
    },
    "automation": {
      "instances": {
        "lead-validation": {
          "minInstances": 2,
          "maxInstances": 5,
          "targetCPU": 60,
          "priority": 1,
          "rollbackEnabled": true
        },
        "follow-up": {
          "minInstances": 1,
          "maxInstances": 3,
          "targetCPU": 65,
          "priority": 2,
          "rollbackEnabled": true,
          "dependencies": ["lead-validation"]
        }
      }
    }
  },
  "monitoring": {
    "enabled": true,
    "interval": 30000,
    "metrics": ["cpu", "memory", "requests", "errors", "latency"],
    "alertThresholds": {
      "responseTime": 5000,
      "errorRate": 0.05,
      "memoryUsage": 0.85
    }
  },
  "loadBalancing": {
    "algorithm": "weighted-round-robin",
    "healthCheckInterval": 10000,
    "failoverEnabled": true
  },
  "communication": {
    "messageQueue": "memory",
    "enableDirectMessaging": true,
    "messageRetention": 86400,
    "maxMessageSize": 1048576
  },
  "memory": {
    "type": "distributed",
    "provider": "memory",
    "maxMemoryPerAgent": "100MB",
    "ttl": 3600,
    "compressionEnabled": false
  },
  "failover": {
    "enabled": true,
    "maxRetries": 3,
    "retryDelay": 5000,
    "circuitBreakerThreshold": 5,
    "recoveryTimeout": 60000
  }
}