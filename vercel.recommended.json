{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "regions": ["iad1", "sfo1", "pdx1"],
  "functions": {
    "src/app/api/health/**/*.ts": {
      "maxDuration": 10,
      "runtime": "edge"
    },
    "src/app/api/test/**/*.ts": {
      "maxDuration": 10,
      "runtime": "edge"
    },
    "src/app/api/robots/**/*.ts": {
      "maxDuration": 10,
      "runtime": "edge"
    },
    "src/app/api/sitemap/**/*.ts": {
      "maxDuration": 10
    },
    "src/app/api/crewai/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/api/ai/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/api/chat/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/voice/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "github": {
    "silent": false,
    "autoJobCancelation": true
  },
  "env": {
    "NEXT_TELEMETRY_DISABLED": "1",
    "NODE_ENV": "production",
    "NEXT_PUBLIC_APP_URL": "https://www.vasquezlawnc.com"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_ENV": "production",
      "NEXT_PUBLIC_APP_URL": "https://www.vasquezlawnc.com",
      "SKIP_ENV_VALIDATION": "1",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/robots"
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/:path*.{js,css,ico,png,jpg,jpeg,gif,svg,woff,woff2}",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-tasks",
      "schedule": "0 9 * * *"
    }
  ]
}
