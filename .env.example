# Vasquez Law Firm Website Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# CORE CONFIGURATION
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:5432/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/vasquez_law

# ===========================================
# AUTHENTICATION
# ===========================================
# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===========================================
# REDIS/CACHING
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379
# Set to true for development without Redis
MOCK_REDIS=false

# ===========================================
# AI SERVICES
# ===========================================
# OpenAI API key for AI features (chatbot, content generation)
OPENAI_API_KEY=sk-your-openai-api-key

