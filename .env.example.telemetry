# OpenTelemetry Configuration for VLF Website
# Copy these variables to your .env.local file

# Service identification
OTEL_SERVICE_NAME=vasquez-law-website
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=development

# Console exporter (for development)
OTEL_ENABLE_CONSOLE=true
OTEL_DEBUG=true

# OTLP exporter (for production monitoring)
# Replace with your actual OTLP endpoint
OTEL_EXPORTER_OTLP_ENDPOINT=https://api.honeycomb.io/v1/traces
# For Honeycomb, use: x-honeycomb-team=YOUR_API_KEY
# For Jaeger, use: Authorization=Bearer YOUR_TOKEN
OTEL_EXPORTER_OTLP_HEADERS_AUTH=x-honeycomb-team=your-api-key-here

# Sampling configuration
OTEL_SAMPLING_RATIO=1.0

# Performance monitoring thresholds (in milliseconds)
OTEL_P99_THRESHOLD_LEAD_CAPTURE=2000
OTEL_P99_THRESHOLD_PAYMENT=5000
OTEL_P99_THRESHOLD_AI_RESPONSE=3000
OTEL_P99_THRESHOLD_DATABASE=500
OTEL_P99_THRESHOLD_EXTERNAL_API=4000

# Trace visualization URL base (optional)
OTEL_TRACE_URL_BASE=https://ui.honeycomb.io/vasquez-law/datasets/vasquez-law-website/trace

# Example configurations for different providers:

# Honeycomb.io
# OTEL_EXPORTER_OTLP_ENDPOINT=https://api.honeycomb.io/v1/traces
# OTEL_EXPORTER_OTLP_HEADERS_AUTH=x-honeycomb-team=YOUR_API_KEY

# Jaeger
# OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger-collector:14268/api/traces
# OTEL_EXPORTER_OTLP_HEADERS_AUTH=

# Datadog
# OTEL_EXPORTER_OTLP_ENDPOINT=https://trace.agent.datadoghq.com/v0.4/traces
# OTEL_EXPORTER_OTLP_HEADERS_AUTH=DD-API-KEY=YOUR_API_KEY

# New Relic
# OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.nr-data.net:4318/v1/traces
# OTEL_EXPORTER_OTLP_HEADERS_AUTH=api-key=YOUR_API_KEY

# Grafana Cloud Tempo
# OTEL_EXPORTER_OTLP_ENDPOINT=https://tempo-prod-04-prod-us-west-0.grafana.net:443/tempo/api/push
# OTEL_EXPORTER_OTLP_HEADERS_AUTH=Authorization=Basic YOUR_TOKEN