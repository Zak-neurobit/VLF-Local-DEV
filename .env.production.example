# Production Environment Variables for Vasquez Law Firm Website
# These are the environment variables needed for production deployment

# ===========================================
# REQUIRED FOR PRODUCTION
# ===========================================

# Core
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://vasquezlawnc.com

# Database (Use connection pooling for production)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Authentication
NEXTAUTH_URL=https://vasquezlawnc.com
NEXTAUTH_SECRET=generate-strong-secret-with-openssl-rand-base64-32

# AI Services
OPENAI_API_KEY=sk-prod-your-openai-api-key

# GoHighLevel CRM
GHL_API_KEY=your-production-ghl-api-key
GHL_LOCATION_ID=your-production-location-id
GHL_CALENDAR_ID=your-production-calendar-id
GHL_MAIN_PIPELINE_ID=your-production-pipeline-id
GHL_NEW_LEADS_STAGE_ID=your-production-stage-id
GHL_DEFAULT_USER_ID=your-production-user-id

# Voice Services
RETELL_API_KEY=your-production-retell-key
RETELL_WEBHOOK_SECRET=your-production-webhook-secret
RETELL_PHONE_NUMBER=your-business-phone

# Email
EMAIL_FROM=info@vasquezlawnc.com
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=info@vasquezlawnc.com
SMTP_PASSWORD=your-production-email-password

# ===========================================
# HIGHLY RECOMMENDED FOR PRODUCTION
# ===========================================

# Redis (for caching and sessions)
REDIS_URL=redis://user:password@your-redis-host:6379

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id

# Google Analytics
GOOGLE_ANALYTICS_ID=G-YOUR-GA-ID

# Google Maps (for office locations)
GOOGLE_MAPS_API_KEY=your-production-maps-key

# ===========================================
# PAYMENT PROCESSING (if accepting payments)
# ===========================================

# LawPay (recommended for law firms)
LAWPAY_PUBLIC_KEY=your-production-public-key
LAWPAY_SECRET_KEY=your-production-secret-key
LAWPAY_TRUST_ACCOUNT_ID=your-trust-account
LAWPAY_OPERATING_ACCOUNT_ID=your-operating-account

# OR Stripe
STRIPE_SECRET_KEY=sk_live_your-production-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-webhook-secret

# ===========================================
# PRODUCTION FLAGS
# ===========================================
SKIP_ENV_VALIDATION=false
MOCK_REDIS=false
MOCK_EMAIL=false
MOCK_SMS=false