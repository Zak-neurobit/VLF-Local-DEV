{
  "installCommand": "npm install",
  "buildCommand": "npm run build:vercel",
  "framework": "nextjs",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=16384",
      "BUILD_TIME": "true",
      "NEXT_PUBLIC_BUILD_ALL_PAGES": "true"
    }
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}