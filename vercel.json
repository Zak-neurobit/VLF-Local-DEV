{
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "functions": {
    "src/app/api/ai/paralegal/route.ts": {
      "runtime": "edge",
      "maxDuration": 30
    },
    "src/app/api/**.ts": {
      "maxDuration": 30,
      "excludeFiles": ["src/app/api/ai/paralegal/route.ts"]
    }
  },
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=8192"
  }
}
