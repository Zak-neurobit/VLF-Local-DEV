# Vasquez Law Firm - Local Development Environment
# Copy this file to .env.local and update with your values

# ===========================================
# CORE CONFIGURATION
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/vasquez_law

# ===========================================
# AUTHENTICATION
# ===========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-generated-secret-here

# ===========================================
# REDIS (Optional for development)
# ===========================================
MOCK_REDIS=true

# ===========================================
# AI SERVICES - REQUIRED FOR CHAT
# ===========================================
# Get your OpenAI API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# WEBSOCKET CONFIGURATION
# ===========================================
# Enable WebSocket for real-time chat
ENABLE_WEBSOCKET=true

# ===========================================
# DEVELOPMENT FLAGS
# ===========================================
# Disable email/SMS in development
MOCK_EMAIL=true
MOCK_SMS=true

# Disable cron jobs in development
ENABLE_CRON=false

# ===========================================
# OPTIONAL SERVICES (Can be added later)
# ===========================================
# GoHighLevel CRM Integration
GHL_API_KEY=
GHL_LOCATION_ID=

# Email Configuration
EMAIL_FROM=noreply@vasquezlaw.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Google Maps (for office locations)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Monitoring (optional)
SENTRY_DSN=