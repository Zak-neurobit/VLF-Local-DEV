{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    // TypeScript 5.6+ features - phased adoption
    "noUncheckedIndexedAccess": false, // TODO: Enable after fixing index access issues
    "exactOptionalPropertyTypes": false, // TODO: Enable after fixing optional property issues
    "noPropertyAccessFromIndexSignature": false, // TODO: Enable after fixing property access
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false, // TODO: Enable after fixing catch variables
    // Transitional settings for React 19 compatibility
    "noImplicitAny": false // Allow implicit any types during React 19 transition
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "src/types/next-extensions.d.ts"
  ],
  "exclude": [
    "node_modules",
    "backup-untracked-files",
    "vasquez-law-website",
    "tools",
    ".next",
    "scripts/test-trained-agents.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/test-*.ts",
    "**/test-*.tsx",
    "src/lib/testing/**/*",
    "src/setupTests.ts",
    "src/setupTestsNode.ts"
  ]
}
